    <style>
        .container div {
            border: 1px solid red;
        }

        .nav-side-menu {
        }

        .nav-side-menu .brand {
        }

        .nav-side-menu .toggle-btn {
            display: none;
        }

        .nav-side-menu ul,
        .nav-side-menu li {
            list-style: none;
            padding: 0px;
            margin: 0px;
            line-height: 15px;
            cursor: pointer;

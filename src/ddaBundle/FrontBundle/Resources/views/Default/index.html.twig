        }

        .ontop {
            height: 180px;
            position: fixed;
            z-index: 999999;
            top: 0;
            background-color: #fff;
            width: 1170px;
        }

        .nav-side-menu li {
            width: 166px;
            padding-right: 10px;
            margin-right: 10px;
        }

        .nav-side-menu li a {
            text-decoration: none;
            font-family: 'AbelRegular', sans-serif;
            text-transform: uppercase;
            font-size: 12px;
            color: black;
            /*!*text-decoration: none;*/
        }

        .nav-side-menu li a:hover {
            color: #009DE0;
            /*-webkit-transition: all 1s ease;*/
            /*-moz-transition: all 1s ease;*/
            /*-o-transition: all 1s ease;*/
            /*-ms-transition: all 1s ease;*/
            /*transition: all 1s ease;*/
        }

        @media (max-width: 767px) {
            .nav-side-menu {
                position: relative;
                width: 100%;
                margin-bottom: 10px;
                color: red;
            }

            .nav-side-menu .toggle-btn {
                display: block;
                cursor: pointer;
                position: absolute;
                right: 10px;
                top: 10px;
                z-index: 10 !important;
                padding: 3px;
                background-color: #ffffff;
                color: #000;
                width: 40px;
                text-align: center;
            }

            .brand {
                text-align: left !important;
                font-size: 22px;
                padding-left: 20px;
                line-height: 50px !important;
            }
        }

        @media (min-width: 767px) {
            .nav-side-menu .menu-list .menu-content {
                display: block;
            }
        }

        @media screen and (max-width: 991px) {
            .columns {
                height: 200px;
            }
        }

        @media screen and (min-width: 992px) {
            .columns {
                -moz-column-count: 3;
                /* Firefox */
                -webkit-column-count: 3;
                /* Safari and Chrome */
                column-count: 3;
                width: 500px;
                height: 170px;
            }
        }

    </style>
    <!-- Bootstrap Core CSS -->
    <link href="https://blackrockdigital.github.io/startbootstrap-simple-sidebar/css/bootstrap.min.css"
          rel="stylesheet">
</head>


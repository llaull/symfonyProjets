{% extends 'BackOfficeBundle:Metronic:body-page-content-managed_datatables.html.twig' %}
{% trans_default_domain 'AppBundleMessage' %}

{% set title_page = 'Les pages statique du front' %}
{% set path_entity_new = 'admin_page_statique_new' %}
{% set table_size = 'col-md-12' %}{# col-md-6 col-sm-12#}

{% block content_txt %}
<tr>
    <th>Nom</th>
    <th>Updated</th>
    <th>Active</th>
    <th>Actions</th>
</tr>
</thead>
<tbody>
{% for page in pages %}
    <tr>
        <td>{{ page.nom }}</td>
        <td>{% if page.updated %}{{ page.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
        <td>{% if page.active %}Yes{% else %}No{% endif %}</td>
        <td>
            <div class="btn-toolbar">
                <div class="btn-group btn-group-xs btn-group-solid">
                    <a class="btn red"
                       href="{{ path('admin_page_statique_show', { 'slug': page.slug }) }}">{{ 'show'|trans }}</a>
                    <a class="btn green"
                       href="{{ path('admin_page_statique_edit', { 'id': page.id }) }}">{{ 'edit'|trans }}</a>
                </div>
            </div>
        </td>
    </tr>
{% endfor %}
{% endblock content_txt %}

{% trans_default_domain 'ddaBundle' %}

{% extends '@ddaBundleFront/Default/index.html.twig' %}

{% block content_txt %}
    <div class="row ovoRegular">
        <ul class="artistes">
            {% for artiste in artistes %}
                {% set img = artiste.category %}
                {% if img %}
                    {% if (is_granted('IS_AUTHENTICATED_ANONYMOUSLY') and artiste.active)
                        or is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li>
                            <a href="{{ path('dda_bundle_front_artiste_accueil',{'slug':artiste.slug}) }}">
                                <img src="{{ img | imagine_filter('artiste_categorie') }}"/>
                                <br><span>{{ artiste.prenom }} {{ artiste.nom }}</span>
                            </a>
                        </li>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </ul>
    </div>
    <div style="clear: both"></div>
{% endblock content_txt %}

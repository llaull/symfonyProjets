{% extends 'BackOfficeBundle:Metronic:body-page-content-managed_datatables.html.twig' %}
{% trans_default_domain 'AppBundleMessage' %}

{% set title_page = 'Les artistes de DDA' %}
{% set path_entity_new = 'admin_artiste_new' %}
{% set table_size = 'col-md-12' %}{# col-md-6 col-sm-12#}

{% block content_txt %}
<tr>
    <th>Collectif</th>
    <th>Nom</th>
    <th>Prenom</th>
    <th>Telephone</th>
    <th>Portable</th>
    <th>Mail</th>
    <th>Site</th>
    <th>Active</th>
    <th>Actions</th>
</tr>
</thead>
<tbody>
{% for artiste in artistes %}
    <tr>
        <td>{{ artiste.collectif }}</td>
        <td>{{ artiste.nom }}</td>
        <td>{{ artiste.prenom }}</td>
        <td>{{ artiste.telephone }}</td>
        <td>{{ artiste.portable }}</td>
        <td>{{ artiste.mail }}</td>
        <td>{{ artiste.site }}</td>
        <td>{% if artiste.active %}Yes{% else %}No{% endif %}</td>
        <td>
            <div class="btn-toolbar">
                <div class="btn-group btn-group-xs btn-group-solid">
                    <a class="btn red"
                       href="{{ path('artiste_show', { 'slug': artiste.slug }) }}">{{ 'show'|trans }}</a>
                    <a class="btn green"
                       href="{{ path('admin_artiste_edit', { 'id': artiste.id }) }}">{{ 'edit'|trans }}</a>
                    <a class="btn yellow modal-delete"
                       data-href="{{ path('admin_artiste_delete', { 'id': artiste.id }) }}"
                       href="{{ path('admin_artiste_delete', { 'id': artiste.id }) }}">{{ 'delete'|trans }}</a>
                </div>
            </div>
        </td>
    </tr>
{% endfor %}
{% endblock content_txt %}

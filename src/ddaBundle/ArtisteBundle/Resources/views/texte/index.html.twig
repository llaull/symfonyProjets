{% extends 'BackOfficeBundle:Metronic:body-page-content-managed_datatables.html.twig' %}
{% trans_default_domain 'AppBundleMessage' %}

{% set title_page = 'Les textes (command√©s) des artistes' %}
{% set path_entity_new = 'admin_artiste_texte_new' %}
{% set table_size = 'col-md-12' %}{# col-md-6 col-sm-12#}

{% block content_txt %}
<tr>
    <th>Slug</th>
    <th>Id</th>
    <th>Created</th>
    <th>Updated</th>
    <th>Active</th>
    <th>Commande</th>
    <th>Date</th>
    <th>Titre</th>
    <th>Contenu</th>
    <th>Normalise</th>
    <th>Auteur</th>
    <th>Actions</th>
</tr>
</thead>
<tbody>
{% for texte in textes %}
    <tr>
        <td><a href="{{ path('admin_artiste_texte_show', { 'id': texte.id }) }}">{{ texte.slug }}</a></td>
        <td>{{ texte.id }}</td>
        <td>{% if texte.created %}{{ texte.created|date('Y-m-d H:i:s') }}{% endif %}</td>
        <td>{% if texte.updated %}{{ texte.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
        <td>{% if texte.active %}Yes{% else %}No{% endif %}</td>
        <td>{% if texte.commande %}Yes{% else %}No{% endif %}</td>
        <td>{{ texte.date }}</td>
        <td>{{ texte.titre }}</td>
        <td>{{ texte.contenu }}</td>
        <td>{% if texte.normalise %}Yes{% else %}No{% endif %}</td>
        <td>{{ texte.auteur }}</td>
        <td>
            <div class="btn-toolbar">
                <div class="btn-group btn-group-xs btn-group-solid">
                    <a class="btn red"
                       href="{{ path('admin_artiste_texte_show', { 'id': texte.id }) }}">{{ 'show'|trans }}</a>
                    <a class="btn green"
                       href="{{ path('admin_artiste_texte_edit', { 'id': texte.id }) }}">{{ 'edit'|trans }}</a>
                    <a class="btn yellow modal-delete"
                       data-href="{{ path('admin_artiste_texte_delete', { 'id': texte.id }) }}"
                       href="{{ path('admin_artiste_texte_delete', { 'id': texte.id }) }}">{{ 'delete'|trans }}</a>
                </div>
            </div>
        </td>
    </tr>
{% endfor %}
{% endblock content_txt %}

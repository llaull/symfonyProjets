{#{{ dump(channels) }}#}

<table border="0" cellspacing="1" cellpadding="1" align="left" style="width:600px;margin:0 auto;background:#FFF;font-family:Verdana, sans-serif; font-size:x-small;">
    <tr>
        <td colspan="5" style="padding:15px 0;">
            {#<h1 style="color:#000;font-size:24px;padding:0 15px;margin:0;">Programme#}
            {#du {{ "now"|date("j F Y") }}</h1>#}
        </td>
    </tr>
    {% for channel in channels %}
        <tr {% if loop.index is odd %}{% set switchColor = '#e6e6e6' %}{% else %}{% set switchColor = '#d9d9d9' %}{% endif %}>
            {#{% set rowStyle = 'background-color: ' ~ {{ switchColor }} ~'; border-bottom:1px solid' ~{{ switchColor }} ~'' %}#}

            {#<tr>#}
            <td style="width:15px;">&nbsp;</td>
            <td style="width:50px; font-family:Verdana, sans-serif; font-size:x-small;border-bottom:1px solid {{ switchColor }};background-color: {{ switchColor }};"
                valign="top">
                {% if channel.imageB64 %}
                    <img alt="{{ channel.name }}" src="{{ channel.imageB64 }}"/>
                {% else %}
                    {{ channel.name }}
                {% endif %}
            </td>
            <td style="width:15px;border-bottom:1px solid {{ switchColor }};background-color: {{ switchColor }};">&nbsp;</td>
            {#programme#}
            <td style="width:400px;font-family:Verdana, sans-serif; font-size:x-small;border-bottom:1px solid {{ switchColor }};background-color: {{ switchColor }};">
                {% for programme in programmes %}
                    {% if programme.idChannel.name == channel.name %}
                        <span style="font-weight: bold">{{ programme.start.date|date('H:i') }}</span> -
                        {{ programme.title }}
                        </br>
                    {% endif %}
            {% endfor %}
                </br>
            </td>
            {#programme#}
            <td style="width:15px;">&nbsp;</td>
        </tr>
    {% endfor %}
    {#ligne#}
    <tr>
        <td colspan="5" style="padding:15px 0;">
            <p style="color:#666;font-size:12px;padding:0 15px;margin:0;">Bonne soir√©e :)</p>
        </td>
    </tr>
</table>

        </div>
        {#<!-- END SIDEBAR BUTTONS -->#}
        {#<!-- SIDEBAR MENU -->#}
        <div class="profile-usermenu">
            <ul class="nav">
                <li {% if app.request.attributes.get('_route') == 'fos_user_profile_show' %} class="active"{% endif %}>
                    <a href="{{ path('fos_user_profile_show') }}">
                        <i class="icon-home"></i> {{ 'My Profile'|trans }} </a>
                </li>
                <li {% if app.request.attributes.get('_route') == 'fos_user_profile_edit' %} class="active"{% endif %}>
                    <a href="{{ path('fos_user_profile_edit') }}">
                        <i class="icon-settings"></i> {{ 'Account Settings'|trans }} </a>
                </li>
                <li>
                    <a href="page_user_profile_1_help.html">
                        <i class="icon-info"></i> {{ 'Help'|trans }}</a>
                </li>
            </ul>
        </div>
        {#<!-- END MENU -->#}
    </div>
    {#<!-- END PORTLET MAIN -->#}

{% trans_default_domain 'AppBundleMessage' %}
{% extends 'BackOfficeBundle:Metronic:body-page.html.twig' %}

{% block moreCss %}

    {% stylesheets
    '@BackOfficeBundle/Resources/public/assets/global/plugins/datatables/datatables.min.css'
    output='assets/global/plugins/datatables/datatables.min.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css"/>
    {% endstylesheets %}
    {% stylesheets
    '@BackOfficeBundle/Resources/public/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css'
    output='assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css"/>
    {% endstylesheets %}

{% endblock moreCss %}
{% block moreJs %}


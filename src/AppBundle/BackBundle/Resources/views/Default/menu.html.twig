{% trans_default_domain 'AppBundleMessage' %}

    {% set back_menu = ["back_office_homepage", "back_office_user_index"] %}
    {% set current_route = app.request.attributes.get('_route') %}

<li class="nav-item start {% if current_route in back_menu %}active open{% endif %}">
    <a href="javascript:;" class="nav-link nav-toggle">
        <i class="icon-home"></i>
        <span class="title">{{ 'Dashboard'|trans }}</span>
        <span class="arrow"></span>
    </a>
    <ul class="sub-menu">
        <li class="nav-item start {% if app.request.attributes.get('_route') == 'back_office_homepage' %}active open{% endif %}">
            <a href="{{ path('back_office_homepage') }}" class="nav-link ">
                <i class="icon-bar-chart"></i>
                <span class="title">{{ 'Dashboard'|trans }}</span>
            </a>
        </li>
        <li class="nav-item start">
            <a href="{{ path('front_office_homepage') }}" class="nav-link" target="_blank">
                <i class="fa fa-object-group"></i>
                <span class="title">{{ 'front'|trans }}</span>
            </a>
        </li>
        <li class="nav-item start {% if app.request.attributes.get('_route') == 'back_office_user_index' %}active open{% endif %}">
            <a href="{{ path('back_office_user_index') }}" class="nav-link">
                <i class="fa fa-users"></i>
                <span class="title">{{ 'users'|trans }}</span>
            </a>
        </li>
    </ul>
</li>

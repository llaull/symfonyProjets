{% extends 'BackOfficeBundle:Metronic:body-page-content-managed_datatables.html.twig' %}
{% trans_default_domain 'AppBundleMessage' %}

{% set title_page = 'user' %}
{% set path_entity_new = 'back_office_user_new' %}
{% set table_size = 'col-md-12' %}{# col-md-6 col-sm-12#}
{% block content_txt %}
<tr>
    <th>lastname</th>
    <th>firstname</th>
    <th>username</th>
    <th>email</th>
    <th>locked</th>
    <th>Actions</th>
</tr>
</thead>
<tbody>
{% for user in users %}
    <tr class="odd gradeX">
        <td>{{ user.lastname }}</td>
        <td>{{ user.firstname }}</td>
        <td>{{ user.username }}</td>
        <td>{{ user.email }}</td>
        <td>{{ user.locked }}</td>
        <td>
            <div class="btn-toolbar">
                <div class="btn-group btn-group-xs btn-group-solid">
                    {#<a class="btn red"#}
                       {#href="{{ path('admin_domotique_module_show', { 'id': user.id }) }}">{{ 'show'|trans }}</a>#}
                    <a class="btn green"
                       href="{{ path('back_office_user_edit', { 'id': user.id }) }}">{{ 'edit'|trans }}</a>
                </div>
            </div>
        </td>
    </tr>
{% endfor %}
{% endblock content_txt %}
